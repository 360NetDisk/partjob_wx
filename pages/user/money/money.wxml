<!--pages/user/money/money.wxml-->
<view class="page">
  <form bindsubmit="formSubmit">
    <view class="weui-cells__title">我要{{title}}</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">金额</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type="number" placeholder="请输入{{title}}金额" auto-focus name="money" />
        </view>
      </view>
    </view>
    <view class="weui-cells__tips">{{tip}}</view>
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" form-type="submit" loading="{{submitLoading}}">提交</button>
    </view>
  </form>
</view>