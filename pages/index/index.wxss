/**index.wxss**/

.top {
  padding: 20rpx;
  /* background: #da251c; */
}

.city {
  width: 160rpx;
  text-align: center;
  background: #f0f0f0;
  height: 52rpx;
  line-height: 50rpx;
  border-radius: 10px;
}

.city image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
  margin-top: 12rpx;
}

.search {
  padding: 0;
  border-radius: 10px;
  border: none;
  margin-left: 100rpx;
}

.icon-search {
  margin: left;
}

swiper {
  display: block;
  width: 710rpx;
  height: 400rpx;
}

.slide {
  margin: 20rpx;
  background: #fff;
}

.slide-item {
  -webkit-border-radius: 10rpx;
  border-radius: 10rpx;
  display: block;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.icon {
  background: #fff;
  height: 160rpx;
  text-align: center;
  padding: 10rpx 20rpx 10rpx 20rpx;
  font-size: 13px;
  border-bottom: 15rpx solid #fcfcfc;
}

.icon image {
  margin-top: 16rpx;
  width: 80rpx;
  height: 80rpx;
}

.more {
  height: 36px;
  border-bottom: 1px solid #efefef;
}

.more span {
  float: right;
  padding: 8px 20px 8px 8px;
  color: #586c94;
}
.list {
  margin: 10px 10px 0 10px;
  padding: 0 10px;
  text-align: center;
  height: 8em;
  line-height: 8em;
  color: #fff;
  border-radius: 5px;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


