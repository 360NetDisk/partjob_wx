/**app.wxss**/
@import 'weui.wxss';

Page {
  font-size: 14px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

button[plain] {
  border: 0;
}

.weui-input {
  height: 3em;
  min-height: 3em;
  line-height: 3em;
}

.weui-select {
  height: 3em;
  min-height: 3em;
  line-height: 3em;
}

.placeholder {
  font-size: 14px;
}

.button-management {
  float: right;
  margin: 0 5px;
  border-radius: 2px;
  padding: 5rpx 10rpx;
  border: 1px solid #1fbf23;
  color: #1fbf23;
  text-align: center;
  width: 30px;
  font-size: 12px;
  line-height: 12px;
}

.info-header {
  background: #fff;
  margin-bottom: 10rpx;
  padding: 25rpx;
  font-size: 16px;
}

.info-name {
  color: #999;
}

.info-wages {
  float: right;
  font-size: 16px;
  color: #ff946e;
  margin-left: 10px;
}

.info-authentication-label {
  border-radius: 2px;
  /* padding: 0 5rpx; */
  /* border: 1px solid #1fbf23; */
  color: #1fbf23;
  margin-right: 10rpx;
  text-align: center;
  width: 30px;
  height: 12px;
  font-size: 12px;
  line-height: 12px;
  background-color: #F0F0F0;
  padding:7rpx;
}

.info-details {
  overflow: hidden;
  margin-bottom: 5px;
}

.info-status {
  position: relative;
  text-align: center;
  background: #fff;
  color: #9d9d9d;
  border: 1px solid #9d9d9d;
  padding: 2px 3px;
  width: 50px;
  height: 15px;
  margin-top: -5px;
  font-size: 15px;
  line-height: 15px;
  opacity: 0.8;
  transform: rotate(-25deg);
}

.userinfo-avatar {
  border-radius: 64rpx;
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}

.info-footer {
  position: fixed;
  bottom: 0rpx;
  width: 95%;
  border-top: 1px #d9d9d9 solid;
  padding: 10px 10px;
  background: #fff;
  color: #fff;
}

.info-footer-icon {
  text-align: center;
  margin: 2px 5px 0 5px;
  line-height: 1.2;
  text-decoration: none;
  overflow: hidden;
  background-color: #fff;
}

.info-footer-icon image {
  width: 20px;
  height: 20px;
}

.info-label {
  color: #1fbf23;
  font-size: 12px;
  display: block;
  line-height: 1.6;
}

.info-top {
  overflow: hidden;
  border-bottom: 2rpx solid #efefef;
  padding: 15rpx 30rpx;
}

.info-content {
  padding: 30rpx;
  border-bottom: 2rpx solid #efefef;
}

.info-tag {
  text-align: center;
  width: 40px;
  height: 40px;
  border: 1px solid 	#8FBC8F;
  border-radius: 50%;
  line-height: 40px;
  margin-right: 20rpx;
  color: #1fbf23;
  font-size: 12px;
}

.info-desc {
  font-size: 12px;
  color: #9d9d9d;
  margin-top: 5rpx;
}

.info-price-tag {
  text-align: center;
}

.info-price-label {
  color: #f00;
}

.info-top-tag {
  text-align: center;
}

.info-top-label {
  padding: 0 5rpx;
  border-radius: 2px;
  border: 1px solid #ffd700;
  color: #ffd700;
  text-align: center;
  width: 30px;
  height: 12px;
  font-size: 12px;
  line-height: 12px;
}

.weui-cells {
  font-size: 14px;
}

.weui-cells__title {
  background: #fff;
  margin: 0;
  padding: 10px 15px 5px 15px;
}

.weui-form-preview {
  margin: 10px;
  -webkit-border-radius: 15rpx;
  border-radius: 15rpx;
}

.weui-form-preview:before {
  border-top: none;
}

.weui-form-preview:after {
  bottom: 0;
  border-bottom: none;
}

.weui-form-preview__value {
  font-size: 12px;
}

.weui-form-preview__value_in-hd {
  font-size: 20px;
}

.weui-form-preview__hd:after {
  left: 0;
}

.empty {
  margin-top: 300rpx;
  text-align: center;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
}

.empty .empty-text {
  font-size: 16px;
  margin-top: 5px;
  color: #a3a3a3;
}

.widget-add {
  position: fixed;
  bottom: 30px;
  right: 20px;
  border-radius: 50%;
  z-index: 5000;
}

.widget-add .add-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
  font-size: 16px;
  color: #fff;
  border-radius: 50%;
  background-color: #1aad19;
  background-size: 50px auto;
}

.weui-media-box__title {
  font-size: 12px;
}

.weui-media-box__desc {
  font-size: 12px;
}

